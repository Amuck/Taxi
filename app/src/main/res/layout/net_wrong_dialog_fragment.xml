<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.bdstar.taxi.viewmodels.NetWrongDialogViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/px_660"
        android:layout_height="365px"
        android:gravity="center_horizontal"
        tools:context=".dialog.AlertDialogFragment">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#333333"
            android:textSize="@dimen/px_30"
            android:layout_marginTop="@dimen/px_17"
            android:text="网络服务无法访问，请稍后重启"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8D8D8"/>
        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="79px"
            android:textColor="#2575FC"
            android:textSize="@dimen/px_28"
            android:background="@null"
            android:text="退出"/>
    </LinearLayout>
</layout>