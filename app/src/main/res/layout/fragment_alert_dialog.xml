<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/px_660"
    android:layout_height="365px"
    android:gravity="center_horizontal"
    tools:context=".dialog.AlertDialogFragment">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ok"
        android:textColor="#333333"
        android:textSize="@dimen/px_28"
        android:gravity="center_vertical"
        android:text="反馈成功" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#333333"
        android:textSize="@dimen/px_30"
        android:layout_marginTop="@dimen/px_17"
        android:text="感谢反馈，我们会继续努力哒"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8"/>
    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="79px"
        android:textColor="#2575FC"
        android:textSize="@dimen/px_28"
        android:background="@null"
        android:text="确定"/>
</LinearLayout>